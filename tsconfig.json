{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "lib": ["ES2022"],
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": ["index.ts", "panel.ts", "table.ts"],
  "exclude": ["node_modules", "dist", "examples.ts", "table-examples.ts", "nested-table-example.ts", "table-width-examples.ts"]
}
